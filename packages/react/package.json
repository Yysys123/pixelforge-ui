{
  "name": "@pixelforge-ui/react",
  "version": "0.3.1",
  "description": "Modern React component library with brutalist design elements, accessibility-first approach, and comprehensive theming support. Live docs: https://mo-sharif.github.io/pixelforge-ui/",
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "accessibility",
    "typescript",
    "theme",
    "css-variables"
  ],
  "homepage": "https://github.com/mo-sharif/pixelforge-ui#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mo-sharif/pixelforge-ui.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/mo-sharif/pixelforge-ui/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "files": [
    "dist",
    "README.md"
  ],
  "license": "MIT",
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "20 kB"
    },
    {
      "path": "./dist/index.mjs",
      "maxSize": "18 kB"
    },
    {
      "path": "./dist/index.css",
      "maxSize": "50 kB"
    }
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --external react,react-dom --minify",
    "dev": "tsup src/index.tsx --format cjs,esm --external react,react-dom --watch",
    "test": "jest",
    "test:a11y": "jest",
    "bundle-size": "bundlesize",
    "clean": "rimraf dist",
    "lint": "eslint 'src/**/*.{ts,tsx}'"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@pixelforge-ui/core": "workspace:*",
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^29.0.0",
    "@types/jest-axe": "^3.5.9",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "bundlesize": "^0.18.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
